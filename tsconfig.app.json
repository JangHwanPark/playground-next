{
  /* ─────────────────────────────────────────────────────
   * 루트(tsconfig.json)의 설정(baseUrl, paths 등)을 상속받음
   * ────────────────────────────────────────────────────*/
  "extends": "./tsconfig.json",
  "compilerOptions": {
    /* ─────────────────────────────────────────────────────
     * 빌드 결과 JS 문법 수준: ES2017 기준으로 변환(async/await 가능)
    * ────────────────────────────────────────────────────*/
    "target": "ES2017",
    /* ─────────────────────────────────────────────────────
     * 프로젝트에서 사용할 환경 타입 정의
     * DOM API, 최신 ES 기능 선언 포함
     * → 브라우저 + React 클라이언트 코드용
     * ────────────────────────────────────────────────────*/
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],

    /* ─────────────────────────────────────────────────────
     * JS 파일 허용 여부: false면 .js 파일은 타입 검사 대상 아님
     * ────────────────────────────────────────────────────*/
    "allowJs": false,
    /* ─────────────────────────────────────────────────────
     * node_modules 안의 .d.ts 타입 검사 스킵 → 속도 향상, 보통 true 권장
     * ────────────────────────────────────────────────────*/
    "skipLibCheck": true,
    /* ─────────────────────────────────────────────────────
     * 모든 TS 엄격 모드 활성화
     * ────────────────────────────────────────────────────*/
    "strict": true,
    /* ─────────────────────────────────────────────────────
     * TS → JS 실제 출력 안 함
     * Next.js가 빌드 처리하므로 필요 없음
     * ────────────────────────────────────────────────────*/
    "noEmit": true,
    /* ─────────────────────────────────────────────────────
     * 증분 빌드를 위한 캐시 생성 (IDE 성능 개선)
     * ────────────────────────────────────────────────────*/
    "incremental": true,
    /* ─────────────────────────────────────────────────────
     * CommonJS 모듈 → ES 모듈 호환성 지원
    * ────────────────────────────────────────────────────*/
    "esModuleInterop": true,
    /* ─────────────────────────────────────────────────────
     * 모듈 시스템: 최신 ESNext 모듈 사용
     * ────────────────────────────────────────────────────*/
    "module": "esnext",
    /* ─────────────────────────────────────────────────────
     * Next.js 권장 moduleResolution 방식 ("bundler")
     * 번들러 기준으로 import 경로 해석
     * ────────────────────────────────────────────────────*/
    "moduleResolution": "bundler",
    /* ─────────────────────────────────────────────────────
     * .json 파일 import 허용
    * ────────────────────────────────────────────────────*/
    "resolveJsonModule": true,
    /* ─────────────────────────────────────────────────────
     * TS가 파일을 개별 모듈로 간주하도록 강제
     * → Next.js, React 환경에서 필수
     * ────────────────────────────────────────────────────*/
    "isolatedModules": true,
    /* ─────────────────────────────────────────────────────
     * React 17+ 자동 JSX 변환 방식 → import React 생략 가능
     * ────────────────────────────────────────────────────*/
    "jsx": "react-jsx",
    /* ─────────────────────────────────────────────────────
     * Next.js가 제공하는 특별한 TS 플러그인 활성화
     * (app router, metadata 타입 등 처리)
     * ────────────────────────────────────────────────────*/
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  /* ─────────────────────────────────────────────────────
   * 컴파일/타입 체크 대상 파일 범위
   * ────────────────────────────────────────────────────*/
  "include": [
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  /* ─────────────────────────────────────────────────────
   * 제외 폴더
   * ────────────────────────────────────────────────────*/
  "exclude": [
    "node_modules"
  ]
}